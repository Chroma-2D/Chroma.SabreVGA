<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <LangVersion>9.0</LangVersion>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    <PropertyGroup>
        <PackageId>Chroma.SabreVGA</PackageId>
        <Version>3.0.0</Version>
        <Authors>Ciastex</Authors>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Description>VGA emulator for Chroma Framework to aid in creation of text-based games.</Description>
        <PackageProjectUrl>https://github.com/Ciastex/SabreVGA</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Ciastex/SabreVGA</RepositoryUrl>
        <RepositoryType>Git</RepositoryType>
        <PackageTags>vga console emulator textmode chroma netcore</PackageTags>
    </PropertyGroup>
    
    <ItemGroup>
      <PackageReference Include="Chroma" Version="0.27.3" />
    </ItemGroup>
</Project>
