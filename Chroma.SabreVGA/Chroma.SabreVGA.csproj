<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <PropertyGroup>
        <PackageId>Chroma.SabreVGA</PackageId>
        <Version>13.0.1</Version>
        <Authors>vddCore</Authors>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Description>VGA emulator for Chroma Framework to aid in creation of text-based games.</Description>
        <PackageProjectUrl>https://github.com/Chroma-2D/Chroma.SabreVGA</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Chroma-2D/Chroma.SabreVGA</RepositoryUrl>
        <RepositoryType>Git</RepositoryType>
        <PackageTags>vga console emulator textmode chroma netcore</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Chroma" Version="0.60.0" />
    </ItemGroup>
</Project>
